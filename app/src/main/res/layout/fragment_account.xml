<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_fragment_base_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="8dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:id="@+id/account_user_image_frame"
                    android:thicknessRatio="1.4">

                    <ImageView
                        android:layout_height="60dp"
                        android:layout_width="match_parent"
                        android:id="@+id/settings_user_image"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/account_user_image_frame"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:id="@+id/account_user_name"
                    android:text="Cyprien Dcunha"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/account_user_image_frame"
                    android:layout_below="@id/account_user_name"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/account_user_email"
                    android:text="dcunha.cyprien@gmail.com"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="2dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:weightSum="1"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Number"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_aadhar_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="1234 5678 9012 5678"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Licence ID"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_licence_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="123ABC3223"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Balance"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="â‚¹ 1256.88"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Licence Expiry"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_licence_expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="30th July 2022"/>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="2dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:stretchColumns="1,2,3,4">

                    <TableRow
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_column="1"
                            android:textStyle="bold"
                            android:text="Type"/>
                        <TextView
                            android:layout_column="2"
                            android:textStyle="bold"
                            android:text="Vehicle"/>
                        <TextView
                            android:layout_column="3"
                            android:textStyle="bold"
                            android:text="Licence Plate"/>
                        <TextView
                            android:layout_column="4"
                            android:textStyle="bold"
                            android:layout_gravity="end"
                            android:text="Default"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:layout_gravity="center_vertical"
                            android:text="Car"/>
                        <TextView
                            android:layout_column="2"
                            android:layout_gravity="center_vertical"
                            android:text="Maruti Swift"/>
                        <TextView
                            android:layout_column="3"
                            android:layout_gravity="center_vertical"
                            android:text="MH-01-SD-3456"/>

                        <RadioButton
                            android:id="@+id/vt_rb1"
                            android:layout_column="4"
                            android:layout_gravity="end"/>

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:layout_gravity="center_vertical"
                            android:text="Truck"/>
                        <TextView
                            android:layout_column="2"
                            android:layout_gravity="center_vertical"
                            android:text="Tata Motors"/>
                        <TextView
                            android:layout_column="3"
                            android:layout_gravity="center_vertical"
                            android:text="MH-23-AB-7532"/>

                        <RadioButton
                            android:id="@+id/vt_rb2"
                            android:layout_column="4"
                            android:layout_gravity="end"/>

                    </TableRow>

                </TableLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="end"
                    android:id="@+id/login_sign_in"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textStyle="bold"
                    android:text="Add Vehicle"/>


            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>